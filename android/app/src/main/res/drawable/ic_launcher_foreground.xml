<?xml version="1.0" encoding="utf-8"?>
<!-- Simple foreground: white rounded square with a colored circle to form a clean icon -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@android:color/transparent" />
    </shape>
  </item>
  <item android:top="16dp" android:left="16dp" android:right="16dp" android:bottom="16dp">
    <shape android:shape="rectangle">
      <corners android:radius="28dp" />
      <solid android:color="#FFFFFF" />
    </shape>
  </item>
  <item android:width="120dp" android:height="120dp" android:gravity="center">
    <shape android:shape="oval">
      <size android:width="120dp" android:height="120dp" />
      <solid android:color="#3A86FF" />
    </shape>
  </item>
</layer-list>
